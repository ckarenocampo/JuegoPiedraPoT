<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="JUEGOS CLASICOS"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIEDRA, PAPEL Y TIJERA"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnNuevo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/buttonstyle"
        android:onClick="OnClickNuevo"
        android:text="Nuevo Jugador" />

    <Button
        android:id="@+id/btnJugar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:background="@drawable/buttonstyle"
        android:onClick="OnClickJugar"
        android:text="iniciar juego" />

    <Button
        android:id="@+id/btnPuntajes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:background="@drawable/buttonstyle"
        android:onClick="OnClickPuntos"
        android:text="puntajes" />
</LinearLayout>