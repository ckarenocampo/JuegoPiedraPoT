<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lblContador"
        android:layout_width="28dp"
        android:layout_height="78dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:gravity="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblContador"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Nombre"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lblVictoria"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Victorias:" />

    <TextView
        android:id="@+id/lblDerrota"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblVictoria"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Derrotas:"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/lblEmpate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblContador"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Empates:"
        android:textColor="#000000"
        android:textSize="19sp" />

</RelativeLayout>